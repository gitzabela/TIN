{% extends 'base.html.twig' %}

{% block title %}Your Dashboard{% endblock %}

{% block container %}
    {% if app.user %}
        <h1>Hello {{ app.user.name }}!</h1>
        {% if app.user.isConfirmed == false %}
            Confirm your account to use all features.
        {% endif %}
    {% else %}
        <h1> Hello guest!</h1>
        <div class="alert alert-warning" role="alert">
            Sign in to access all of the features...
        </div>
    {% endif %}
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-8">
                    <div class="card mb-4">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="180"
                             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                             role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title>
                            <rect fill="#868e96" width="100%" height="100%"></rect>
                            <text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text>
                        </svg>
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                of
                                the card's content.</p>
                        </div>
                        <div class="card-body">
                            <div class="float-left" style="font-size: 13px;">
                                10/01/2019 - 16/01/2019<br>
                                Paris, France
                            </div>
                            <span class="float-right badge badge-secondary m-1">Cook</span>
                            <span class="float-right badge badge-secondary m-1">Driver</span>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="180"
                             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false"
                             role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title>
                            <rect fill="#868e96" width="100%" height="100%"></rect>
                            <text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text>
                        </svg>
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                of
                                the card's content.</p>
                        </div>
                        <div class="card-body">
                            <div class="float-left" style="font-size: 13px;">
                                10/01/2019 - 16/01/2019<br>
                                Paris, France
                            </div>
                            <span class="float-right badge badge-secondary m-1">Cook</span>
                            <span class="float-right badge badge-secondary m-1">Driver</span>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Event Categories</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for category in categories %}
                                <a href="#"
                                   class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center">
                                    {{ category.name }}
                                    <span class="badge badge-primary badge-pill">14</span>
                                </a>
                            {% endfor %}
                        </ul>
                    </div>
                    tags,
                    categories,
                    search
                </div>
            </div>
        </div>
    </div>
{% endblock %}
